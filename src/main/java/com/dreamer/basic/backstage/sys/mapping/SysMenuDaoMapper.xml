    <!-- mysql -->
    <select id="getMenuList" parameterType="Integer" resultMap="BaseResultMap">
        select * from sys_menu order by MENU_TYPE,ORDER_NUM asc limit #{arg0},#{arg1}
    </select>
    <select id="getMenuByMenuId" parameterType="Integer" resultMap="BaseResultMap">
        select A.*,
            if(A.parent_id = -1,
                '根目录',
                (select menu_name from sys_menu where menu_id = A.parent_id)
            ) as parent_name
        from sys_menu A
        where A.menu_id = #{menuId}
    </select>
    <select id="getMenuDataList" parameterType="Integer" resultMap="BaseResultMap">
        select A.*,
            if(A.parent_id = -1,
                '根目录',
                (select menu_name from sys_menu where menu_id = A.parent_id)
            ) as parent_name
        from sys_menu A
    </select>



</mapper>