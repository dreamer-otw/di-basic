<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="my" targetRuntime="MyBatis3">

        <!--自动实现Serializable接口-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>

        <!-- 去除自动生成的注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!--数据库基本信息-->
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                        userId="basic"
                        password="123456">
        </jdbcConnection>

        <!--生成实体类的位置以及包的名字-->
        <!--同样Mac用户：targetProject 为全路径-->
        <javaModelGenerator targetPackage="com.dreamer.basic.common.generator.entity" targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="true" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--生成映射文件存放位置-->
        <!--同样Mac用户：targetProject 为全路径-->
        <sqlMapGenerator targetPackage="com.dreamer.basic.common.generator.mapping" targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!--生成Dao类存放位置,mapper接口生成的位置-->
        <!--同样Mac用户：targetProject 为全路径-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.dreamer.basic.common.generator.dao" targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- 配置表信息 -->
        <!-- schema即为数据库名 tableName为对应的数据库表 domainObjectName是要生成的实体类 enable*ByExample
            是否生成 example类 -->
        <!--<table tableName="SYS_USER"
               domainObjectName="SysUser" enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               enableUpdateByExample="false">
        </table>-->
        <table tableName="SYS_USER">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="USER_ID" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table tableName="SYS_ROLE">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="ROLE_ID" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table tableName="SYS_MENU">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="MENU_ID" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table tableName="SYS_USER_ROLE">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="NEXUS_ID" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table tableName="SYS_ROLE_MENU">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="NEXUS_ID" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
    </context>
</generatorConfiguration>
